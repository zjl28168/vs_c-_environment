{
    "version": "2.0.0",
    "command": "g++",
    "args": [
        //"-g",
        //"${file}",
        "Source\\main.cpp",
        "Source\\My_first_io.cpp",
        "Source\\newplace.cpp",
        "-o",
       // "main.exe"
        "${workspaceRoot}\\${fileBasename}.exe"
    ], // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}